# ============================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ============================================

# ============================================
# API CONFIGURATION
# ============================================
# Point to your backend API URL
# Development: http://localhost:5000
# Production: https://your-backend-domain.com (without /api/v1 suffix)
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_VERSION=v1

# ============================================
# APP CONFIGURATION
# ============================================
REACT_APP_NAME=Digious CRM
REACT_APP_VERSION=1.0.0

# ============================================
# ENVIRONMENT
# ============================================
# Set to 'production' when deploying to production
REACT_APP_ENV=development

# ============================================
# SESSION CONFIGURATION (in minutes)
# ============================================
# How long before warning user about inactivity
REACT_APP_INACTIVITY_WARNING=5
# How long before auto-logout due to inactivity
REACT_APP_SESSION_TIMEOUT=30

# ============================================
# FEATURE FLAGS
# ============================================
# Enable analytics tracking
REACT_APP_ENABLE_ANALYTICS=false
# Enable debug logging to console
REACT_APP_ENABLE_DEBUG=true
